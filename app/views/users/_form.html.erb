<div class = "jumbotron">
<% flash.each do |type, msg| %>  <div class="alert alert-info">    <%= msg %>  </div><% end %>
  <%= form_with  model: user do |user_form| %>
    
    <div class="form-group">
    <%= user_form.label :username, "Username:" %>
    <%= user_form.text_field :username %>
    <% user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>

    <div class="form-group">
    <%= user_form.label :email, "Email:" %>
    <%= user_form.email_field :email %>
    <% user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>  </div>

    <%= fields_for :user_detail, user.user_detail do |user_detail_form| %>
      
      <div class="form-group">
      <%= user_form.label :query, "First Name:" %>
      <%= user_detail_form.text_field :first_name %>
      </div>
      
      <div class="form-group">
      <%= user_form.label :query, "Last Name:" %>
      <%= user_detail_form.text_field :last_name %>
      </div>
      
      <div class="form-group">
      <%= user_form.label :query, "Primary Address:" %>
      <%= user_detail_form.text_field :primary_address %>
      </div>

      <div class="form-group">
      <%= user_form.label :query, "Secondary Address:" %>
      <%= user_detail_form.text_field :secondary_address %>
      </div>
      
      <div class="form-group">
      <%= user_form.label :query, "DOB:" %>
      <%= user_detail_form.date_field :dob %>
      </div>
    
      <% end %>
    <div class="btn btn-success">
    <%= user_form.submit %>
    </div>
  <% end %>
</div>
